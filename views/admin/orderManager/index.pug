                    tr.text-center
                      th STT
                      th Chú thích
                      th Số tiền 
                      th Trạng thái
                      th Thời gian
                      th Thao tác
                  tbody 
                    each orderManager, index in orderManagerList
                      tr.text-center
                        td= index + 1
                        td= orderManager.note
                        td= orderManager.total
                        if orderManager.orderStatus == 0
                            td= "Chưa thanh toán"
                        else if orderManager.orderStatus == 1
                            td= "Đã thanh toán"
                        td= moment(orderManager.time).subtract(10, 'days').calendar()
