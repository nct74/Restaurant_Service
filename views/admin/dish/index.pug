block content
  .content-wrapper
    // Content Header (Page header)
    section.content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1 Quản lý Thực đơn
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='#') Home
              li.breadcrumb-item.active Quản lý Thực đơn
      // /.container-fluid
    // Main content
    section.content
      .container-fluid
        .row
          .col-12             
            .card
              // /.card-header
              .card-body
                .row
                  .col-md-10
                    // Button trigger modal
                    button.btn.btn-primary.custom-button(type='button' data-toggle='modal' data-target='#addDishModal')
                        | Thêm mới
                  .col-md-2
			  
                // Modal add dish
                #addDishModal.modal.fade(role='dialog' aria-labelledby='addDishModal' aria-hidden='true')
                    .modal-dialog(role='document')
                        .modal-content
                            .modal-header
                                h5#adddishModal.modal-title Thêm mới
                                button.close(type='button' data-dismiss='modal' aria-label='Close')
                                    span(aria-hidden='true') &times;
                            form#form-add-dish(action="/dish/add", method = "post", enctype='multipart/form-data')
                                .modal-body
                                    .row
                                        .col-md-6
                                            .form-group
                                                label Tên sản phẩm
                                                input.form-control(type='text' placeholder='Tên sản phẩm' name='name')
                                        .col-md-6
                                            .form-group
                                                .row 
                                                label Đơn giá
                                                input.form-control(type='number' placeholder='Đơn giá' name='price')
                                    .row
                                        .col-md-6
                                            .form-group
                                                .row 
                                                label Loại sản phẩm
                                                input.form-control(type='text' placeholder='Loại sản phẩm' name='type')
                                    .row
                                        .col-md-12
                                            .form-group
                                                .row 
                                                //- label Hình ảnh minh họa
                                                //- input.form-control(type='file' name='image')
                                                label(for='exampleInputFile') File input
                                                .input-group
                                                    .custom-file
                                                        input#exampleInputFile.custom-file-input(type='file', name="sampleFile")
                                                        label.custom-file-label(for='exampleInputFile') Choose file
                                                    .input-group-append
                                                        span.input-group-text Upload
                                    .row
                                        .col-md-12
                                            .form-group
                                                .row 
                                                label Thông tin chi tiết
                                                input.form-control(type='text' placeholder='Thông tin chi tiết' name='info_detail')
                                .modal-footer
                                  button.btn.btn-primary(type='submit') Thêm mới 
                                  button.btn.btn-secondary(type='button' data-dismiss='modal') Đóng lại
                table#tab-dish.table.table-bordered.table-striped
                  thead
                    tr.text-center
                      th STT
                      th Tên sản phẩm
                      th Đơn giá
                      th Thông tin chi tiết
                      th Loại sản phẩm
                      th Hình ảnh minh họa
                      th Thao tác
                  tbody 
                    each dish, index in dishList
                      tr.text-center
                        td= index + 1
                        td= dish.name
                        td= dish.price
                        td= dish.info_detail
                        td= dish.type
                        td= dish.image
