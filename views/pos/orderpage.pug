        #carouselExampleIndicators.carousel.slide(data-ride='carousel')
            .carousel-inner  
                .carousel-item.active(style="margin-left:100px;")
                    .carousel-part    
                        .cardmenu.getdata( style=" margin-left:5px;", data-type="All of dish")
                            img(src="/img/cake.png" alt='First slide' style="width: 80%;margin-left:12px;  ")
                            h3(style="text-align:center;") All of dish
                        .cardmenu.getdata( style=" margin-left:20px;" , data-type=data1.type)
                            img(src=data1.image alt='First slide' style="width: 80%; margin-left:12px;")
                            h3(style="text-align:center;")=data1.name
                        .cardmenu.getdata( style=" margin-left:20px;" , data-type=data2.type)
                            img(src=data2.image alt='First slide' style="width: 80%;margin-left:12px;") 
                            h3(style="text-align:center;")=data2.name
                        .cardmenu.getdata( style=" margin-left:20px;" , data-type=data3.type)
                            img(src=data3.image alt='First slide' style="width: 80%;margin-left:12px;") 
                            h3(style="text-align:center;")=data3.name

                - var i = 0;          
                each typeofdish in data
                    if(data[i])
                        .carousel-item(style="margin-left:100px; float:left; ")
                            if (data[i])
                                .cardmenu.getdata( style=" margin-left:5px; float:left;  ",data-type=data[i].type)
                                    img(src=data[i].image alt='First slide' style="width: 80%;margin-left:12px;" )
                                    h3(style="text-align:center;")=data[i].name

                            if (data[i+1])
                                .cardmenu.getdata( style=" margin-left:40px; float:left; ", data-type=data[i+1].type)
                                    img(src=data[i+1].image alt='First slide' style="width: 80%;margin-left:12px;")
                                    h3(style="text-align:center;")=data[i+1].name
                            if (data[i+2])
                                .cardmenu.getdata( style=" margin-left:40px; float:left; ", data-type=data[i+2].type)
                                    img(src=data[i+2].image alt='First slide' style="width: 80%;margin-left:12px;" )
                                    h3(style="text-align:center;")=data[i+2].name
                            if (data[i+3])
                                .cardmenu.getdata( style=" margin-left:40px; float:left; ", data-type=data[i+3].type)
                                    img(src=data[i+3].image alt='First slide' style="width: 80%;margin-left:12px;" )
                                    h3(style="text-align:center;")=data[i+3].name
                    - i = i+4;  
            a.carousel-control-prev(href='#carouselExampleIndicators' role='button' data-slide='prev' )
                span.carousel-control-prev-icon(aria-hidden='true' style="background-image: url(/img/backar.jpg)")
                span.sr-only Previous
            a.carousel-control-next(href='#carouselExampleIndicators' role='button' data-slide='next')
